  g_EE->Fit("pol1");
  g_EE->Draw("AP");
  g_EE->GetXaxis()->SetTitle("#DeltaG [%]");
  g_EE->GetYaxis()->SetTitle("#DeltaP [%]");
  
  c->SaveAs("tmp/EE-ADC_stability-rawSC.eps");

